        <script>
            gah.event('landing', 'view')
        </script>
    </head>
<body>
    <div id="block-main" class="container-fluid">
        <div id="block-1" class="row">
            <div class="col-3">
                <div class="row">
                    <img id="star-1" src="./static/content/landing/star.svg" alt="">
                </div>
                <div class="row">
                    <img id="star-2" src="./static/content/landing/star.svg" alt="">
                </div>
            </div>
            <div class="col-6">
                <img id="mainlogo" src="./static/content/landing/logo_square.svg" alt="">
                <br>
                <span>
                    Плагины для 
                    <a href="https://miro.com" target="_blank">
                        <img src="./static/content/landing/miro.png" alt="">
                    </a>
                </span>
                <div id="arrow-container" class="row">
                    <div id="arrow">
                        <a href="#block-2">
                            <img src="./static/content/landing/arrow.svg" alt="">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="row">
                    <img id="star-3" src="./static/content/landing/star.svg" alt="">
                </div>
            </div>
        </div>
        <div id="block-2" class="row">
            <div class="col-sm-auto">
                <div class="list-group" id="list-tab" role="tablist">
                    {{#each plugins}}
                    <a class="list-group-item list-group-item-action {{#ifeq @index 0}}active{{/ifeq}}" id="list-plugins-list" data-toggle="list" href="#tab-plugin-{{ this.name }}" role="tab" aria-controls="home">
                        {{ this.publicName }}
                    </a>
                    {{/each}}
                </div>
            </div>
            <div class="col">
                <div class="tab-content" id="nav-tabContent">
                    {{#each plugins}}
                    <div class="tab-pane fade show {{#ifeq @index 0}}active{{/ifeq}}" id="tab-plugin-{{ this.name }}" role="tabpanel" aria-labelledby="list-home-list">
                        <img class="plugin-preview-svg" src="./static/content/landing/preview/{{ this.name }}.svg" alt="">
                        <a class="plugin-link" href="{{ this.link }}" target="_blank" name="{{ this.name }}">
                            Установить {{ this.publicName }}
                        </a>
                        <br>
                        <div class="row">
                            <div class="col-8">
                                {{ this.description }}
                            </div>
                            <div class="col-4">
                                <img class="plugin-preview-gif" src="./static/content/landing/preview/{{ this.name }}.gif" alt="">
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <div id="block-3" class="row">
            <div id="social-networks" class="col">
                <h1>Мы в соц. сетях</h1>
                <br>
                <a class="social-network-link" href="https://vk.com/domagicforpeople" target="_black" name="vk">
                    <img src="./static/content/landing/logos/vk.svg" alt="VKontakte: Do magic!">
                </a>
                <a class="social-network-link" href="https://www.instagram.com/domagic4people/" target="_black" name="instagram">
                    <img src="./static/content/landing/logos/instagram.svg" alt="Instagram: Do magic!">
                </a>
                <a class="social-network-link" href="https://twitter.com/domagic4people" target="_black" name="twitter">
                    <img src="./static/content/landing/logos/twitter.svg" alt="Twitter: Do magic!">
                </a>
            </div>
        </div>
    </div>
    <script>
        const links = document.getElementsByClassName("social-network-link")
        Array.from(links).forEach(link => {
            link.onclick = e => {
                gah.event('landing', 'click', e.srcElement.name)
            }
        })
        const pluginLinks = document.getElementsByClassName("plugin-link")
        Array.from(pluginLinks).forEach(link => {
            link.onclick = e => {
                gah.event('landing', 'click', `install ${e.srcElement.name}`)
            }
        })
    </script>
</body>
</html>
